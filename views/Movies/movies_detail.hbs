{{#each movieSpec}}
<div class="card mb-3 border-light" style="max-width: 800px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{image}}" class="img-fluid rounded-start random-img" alt="{{title}}">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h2 class="card-title"> {{title}}</h2>
                <p class="card-text">{{director}}</p>
                <p class="card-text"> {{description}}</p>
                <p class="card-text"><b>{{stars}}</b></p>
                <p class="card-text"><small class="text-muted">{{showtimes}}</small></p>
            </div>
        </div>
    </div>
</div>
{{/each}}